<p id="notice"><%= notice %></p>

<div class="slide">
	<div class="header">
		<strong>Duration</strong>: <%= @slide.duration %>s &nbsp&nbsp&nbsp
		<%= link_to 'Next Slide', slideshow_slide_path(@slideshow, @next_slide) %> &nbsp&nbsp&nbsp
		<%= link_to 'Edit Current Slide', edit_slideshow_slide_path(@slideshow, @slide) %> &nbsp&nbsp&nbsp
		<%= link_to 'Settings/New Slide', new_slideshow_slide_path(@slideshow) %>
	</div>
	
	<div class="one">
	  <%= @slide.title %>
	</div>
	
	<p>
		<%= render :partial => render_subtype_partial(@slide_subtype), :object => @slide_subtype %>
	</p>
	
	<script type="text/javascript">
		setTimeout(function(){window.location="<%= slideshow_slide_path(@slideshow, @next_slide) %>"},
		<%= @slide.duration*1000 %>)
	</script>

</div>
