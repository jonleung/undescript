<h1>Listing slideshows</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Slide order hash</th>
    <th></th>
    <th></th>
  </tr>

<% @slideshows.each do |slideshow| %>
  <tr>
    <td><%= slideshow.name %></td>
    <td><%= slideshow.slide_order_hash %></td>
	
    <td><%= link_to 'Show', slideshow %></td>

	<td><%= link_to 'Edit', new_slideshow_slide_path(slideshow)%></td>
    <td><%= link_to 'Destroy', slideshow, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Slideshow', new_slideshow_path %>
